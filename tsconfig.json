{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db": ["packages/db/*"],  
      "@repo/ui/*": ["packages/ui/*"],
      "@repo/utils/*": ["packages/utils/*"]
    }
  },
  "include": ["apps/**/*", "packages/**/*"]
}